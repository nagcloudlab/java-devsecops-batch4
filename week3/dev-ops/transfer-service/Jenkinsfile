
pipeline{
    agent any
    stages{
       stage("Compile"){
         steps{
            dir("week3/dev-ops/transfer-service"){
                sh "./mvnw compile"
            }
         } 
        }
        stage("Test"){
         steps{
            dir("week3/dev-ops/transfer-service"){
                sh "./mvnw test"
            }
         }  
        }
        stage("Package"){
         steps{
            dir("week3/dev-ops/transfer-service"){
                sh "./mvnw package -DskipTests"
            }
         }  
        }

        stage('Deploy') {
            steps {
               withCredentials([file(credentialsId: 'nexus-cred-xml', variable: 'SETTINGS_XML')]) {
                    dir('week3/dev-ops/transfer-service') {
                        sh './mvnw deploy -DskipTests -s $SETTINGS_XML'
                    }
                }
            }
        }

    }

}